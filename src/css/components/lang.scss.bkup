.rds-languages {
  position: relative;
  padding-top: 76px;

  @include mobile {
    padding-top: 54px;
  }

  .shape {
    position: absolute;
    top: -61px;
    left: calc(50% - 154px);

    @include mobile {
      zoom: .5;
      top: 380px;
      left: -150px;
    }
  }

  .languages-list {
    align-items: center;
    display: inline-flex;
    flex-direction: column;
    height: 100%;
    justify-content: space-around;
    position: relative;
    text-decoration: none;
    box-shadow: 0 1px 5px 0 rgb(0 0 0 / 7%), 0 7px 17px 0 rgb(0 0 0 / 10%);
    width: 150px;
    padding-top: 20px;

    @include mobile {
      flex-wrap: wrap;
      justify-content: center;
    }

    &:not(:first-child) {
      margin-top: 2rem;

      @include mobile {
        margin-top: 12px;
      }
    }

    li {
      @include mobile {
        flex: 0 0 50%;
        margin-top: 42px;
        text-align: center;
      }

      a {
        display: inline-flex;
        flex-direction: column;
        align-items: center;
        height: 100%;
        text-align: center;
        text-decoration: none;

        svg {
          margin-bottom: 1rem;

          @include mobile {
            zoom: .85;
          }
        }

        .btn {
          margin-top: auto;
          padding: 6px 15px 8px;
          border-radius: 3px;
          line-height: 1.3;
          font-family: $roboto;
          font-size: 16px;
          font-weight: 500;
          color: $red;
          transition: background-color .2s ease-in-out, color .2s ease-in-out;

          @include mobile {
            font-size: 14px;
          }
        }

        &:hover .btn {
          background-color: $purple;
          color: $white;
        }
      }
    }
  }
}
